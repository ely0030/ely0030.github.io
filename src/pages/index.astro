					}
					
					.folder-group > .directory-entry {
						margin-bottom: 0.1em;
						font-weight: 500;
					}
					
					.folder-header-wrapper {
						display: inline-flex;
						align-items: center;
						gap: 0;
					}
					
					.folder-header {
						display: inline-flex;
						align-items: center;
						gap: 0.2em;
						background: none;
						border: none;
						padding: 0;
						cursor: pointer;
						font-size: 1em;
						font-family: monospace;
						color: var(--color-link);
						width: auto;
						text-align: left;
						transition: opacity 0.2s ease;
						line-height: 1.5;
						font-weight: 400;
						text-transform: none;
						text-decoration: none;
